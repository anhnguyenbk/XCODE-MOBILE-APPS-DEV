<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

  <com.xcode.mobile.smilealarm.smiledetectmanager.ui.camera.CameraSourcePreview
      android:id="@+id/preview"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <com.xcode.mobile.smilealarm.smiledetectmanager.ui.camera.GraphicOverlay
        android:id="@+id/faceOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

  </com.xcode.mobile.smilealarm.smiledetectmanager.ui.camera.CameraSourcePreview>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="-70dp"
      android:layout_below="@id/toolbar">

    <Button
        android:id="@+id/btnTurnOff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/turn_off_alarm" />

  </LinearLayout>

</LinearLayout>
